{
    "files": ["src/PageFlip.ts", "src/BasicTypes.ts"],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "noImplicitAny": true,
        
        "lib": ["es6", "es2016", "dom", "dom.iterable", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],

        "module": "esnext",
        "target": "es2017"
    },
    "typedocOptions": {
        "name": "StPageFlip",
        "mode": "file",
        "out": "dist/docs",
        "readme": "none",
        "excludePrivate": true,
        "excludeNotExported": true,
        "excludeProtected": true,
        "categorizeByGroup": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "src/**/*.test.tsx"],
    "reference": []
}
